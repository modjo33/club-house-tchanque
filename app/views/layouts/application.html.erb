<!DOCTYPE html>
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="utf-8">
    <title><%= @page_title || "Club House Tchanqué - Restaurant du Golf" %></title>
    <meta name="description" content="<%= @page_description || "Club House Tchanqué - Restaurant du Golf de Villenave-d'Ornon. Cuisine française traditionnelle, terrasse avec vue sur le golf." %>">
    <meta name="keywords" content="<%= @page_keywords || "restaurant, golf, villenave d'ornon, bordeaux" %>">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Open Graph -->
    <meta property="og:type" content="website">
    <meta property="og:locale" content="fr_FR">
    <meta property="og:site_name" content="Club House Tchanqué">
    <meta property="og:title" content="<%= @page_title || "Club House Tchanqué" %>">
    <meta property="og:description" content="<%= @page_description || "Restaurant du Golf de Villenave-d'Ornon" %>">
    <meta property="og:url" content="<%= request.original_url %>">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= @page_title || "Club House Tchanqué" %>">
    <meta name="twitter:description" content="<%= @page_description || "Restaurant du Golf de Villenave-d'Ornon" %>">

    <%= yield :head %>

    <!-- Canonical URL -->
    <link rel="canonical" href="<%= request.original_url.split('?').first %>">

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
      <%= raw restaurant_json_ld %>
    </script>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="font-sans bg-cream-50 text-forest-800" id="top">
    <!-- Navbar -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-forest-900/95 backdrop-blur-sm shadow-lg" data-controller="navbar">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-20">
          <!-- Logo -->
          <%= link_to root_path, class: "flex items-center gap-3" do %>
            <%= image_tag "logo/logo-tchanque.jpg", class: "h-14 w-auto rounded-lg shadow-md", alt: "Club House Tchanqué" %>
          <% end %>

          <!-- Desktop Menu -->
          <div class="hidden md:flex items-center gap-6">
            <%= link_to "Accueil", root_path, class: "nav-link #{current_page?(root_path) ? 'nav-link-active' : ''}" %>
            <%= link_to "La carte", carte_path, class: "nav-link #{current_page?(carte_path) ? 'nav-link-active' : ''}" %>
            <%= link_to "Vins", vins_path, class: "nav-link #{current_page?(vins_path) ? 'nav-link-active' : ''}" %>
            <%= link_to "Boissons", boissons_path, class: "nav-link #{current_page?(boissons_path) ? 'nav-link-active' : ''}" %>
            <%= link_to "Événements", evenements_path, class: "nav-link #{current_page?(evenements_path) ? 'nav-link-active' : ''}" %>
            <%= link_to "Admin", admin_root_path, class: "text-xs text-forest-500 hover:text-cream-200 transition-colors opacity-50 hover:opacity-100 ml-2" %>
          </div>

          <!-- Mobile Menu Button -->
          <button type="button" class="md:hidden text-cream-100 hover:text-white transition-colors" data-action="click->navbar#toggleMenu" aria-label="Menu">
            <svg class="w-8 h-8" data-navbar-target="menuIcon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            <svg class="w-8 h-8 hidden" data-navbar-target="closeIcon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile Menu -->
        <div class="md:hidden hidden pb-6" data-navbar-target="mobileMenu">
          <div class="flex flex-col gap-4">
            <%= link_to "Accueil", root_path, class: "mobile-nav-link #{current_page?(root_path) ? 'mobile-nav-link-active' : ''}" %>
            <%= link_to "La carte", carte_path, class: "mobile-nav-link #{current_page?(carte_path) ? 'mobile-nav-link-active' : ''}" %>
            <%= link_to "Carte des vins", vins_path, class: "mobile-nav-link #{current_page?(vins_path) ? 'mobile-nav-link-active' : ''}" %>
            <%= link_to "Carte des boissons", boissons_path, class: "mobile-nav-link #{current_page?(boissons_path) ? 'mobile-nav-link-active' : ''}" %>
            <%= link_to "Nos événements", evenements_path, class: "mobile-nav-link #{current_page?(evenements_path) ? 'mobile-nav-link-active' : ''}" %>
            <div class="border-t border-forest-700 pt-4 mt-2">
              <%= link_to "Admin", admin_root_path, class: "text-xs text-forest-500 hover:text-cream-200 transition-colors" %>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <!-- Events Banner (between navbar and content) -->
    <div class="pt-20">
      <%= render "shared/events_banner" %>
    </div>

    <!-- Main Content -->
    <main>
      <%= yield %>
    </main>

    <!-- Floating Reservation Button (Mobile) -->
    <a href="tel:0961631527" class="floating-cta md:hidden" aria-label="Appeler pour réserver">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
      </svg>
    </a>

    <!-- Footer -->
    <footer class="bg-forest-900 text-cream-100">
      <!-- Logo et présentation -->
      <div class="container mx-auto px-4 pt-12 pb-8 text-center border-b border-forest-700">
