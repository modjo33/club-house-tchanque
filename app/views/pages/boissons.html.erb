<%# ========================================== %>
<%# HERO %>
<%# ========================================== %>
<section class="relative -mt-20 h-[50vh] min-h-[400px] max-h-[600px] flex items-center justify-center overflow-hidden">
  <!-- Image de fond -->
  <%= image_tag "hero/terrasse-lac.jpg", class: "absolute inset-0 w-full h-full object-cover", alt: "Bar du restaurant" %>

  <!-- Overlay sombre -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/50 to-black/70"></div>

  <!-- Contenu -->
  <div class="relative z-10 container mx-auto px-4 pt-20 text-center text-white">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold mb-4 drop-shadow-lg">
      La carte des boissons
    </h1>
    <p class="text-xl md:text-2xl text-cream-100 drop-shadow font-light">
      Apéritifs, cocktails & bières
    </p>
  </div>
</section>

<%# ========================================== %>
<%# CONTENU EN CARDS %>
<%# ========================================== %>
<section class="section-padding bg-sage-50">
  <div class="container mx-auto px-4">

    <% if @beverages.empty? %>
      <p class="text-center text-gray-500 py-12">La carte des boissons sera bientôt disponible.</p>
    <% else %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">

        <% Beverage::CATEGORIES.each do |category_key, category_label| %>
          <% beverages = @beverages[category_key] %>
          <% next unless beverages&.any? %>

          <%# Card pour chaque catégorie %>
          <div class="bg-white rounded-lg shadow-md p-6 <%= 'md:col-span-2 lg:col-span-2' if category_key == 'biere' %>" data-controller="scroll-animation">
            <%# Titre de la catégorie %>
            <h2 class="text-2xl font-serif font-bold text-forest-800 mb-6 pb-3 border-b-2 border-gold-400">
              <%= category_label %>
            </h2>

            <% if category_key == "biere" %>
              <%# Card spéciale pour les bières avec colonnes de tailles %>
              <div class="overflow-x-auto -mx-2">
                <table class="w-full min-w-[300px]">
                  <thead>
                    <tr class="border-b border-sage-200">
                      <th class="text-left py-2 px-2 font-medium text-forest-700 text-sm"></th>
                      <th class="text-center py-2 px-2 font-medium text-forest-600 text-xs uppercase tracking-wide">25cl</th>
                      <th class="text-center py-2 px-2 font-medium text-forest-600 text-xs uppercase tracking-wide">33cl</th>
                      <th class="text-center py-2 px-2 font-medium text-forest-600 text-xs uppercase tracking-wide">50cl</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% beverages.each_with_index do |beverage, index| %>
                      <tr class="<%= 'border-b border-dashed border-sage-200' unless index == beverages.length - 1 %>">
                        <td class="py-3 px-2 font-medium text-forest-800"><%= beverage.name %></td>
                        <td class="py-3 px-2 text-center text-forest-600 text-sm">
                          <%= beverage.price_small.present? ? number_to_currency(beverage.price_small, unit: "€", format: "%n%u") : "—" %>
                        </td>
                        <td class="py-3 px-2 text-center text-forest-600 text-sm">
                          <%= beverage.price_medium.present? ? number_to_currency(beverage.price_medium, unit: "€", format: "%n%u") : "—" %>
                        </td>
                        <td class="py-3 px-2 text-center text-forest-600 text-sm">
                          <%= beverage.price_large.present? ? number_to_currency(beverage.price_large, unit: "€", format: "%n%u") : "—" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <%# Liste standard pour les autres catégories %>
              <div class="space-y-0">
                <% beverages.each_with_index do |beverage, index| %>
                  <div class="flex justify-between items-start py-3 <%= 'border-b border-dashed border-sage-200' unless index == beverages.length - 1 %>">
                    <div class="pr-4 flex-1">
                      <span class="font-medium text-forest-800"><%= beverage.name %></span>
                      <% if beverage.description.present? %>
                        <p class="text-sm text-sage-600 mt-0.5"><%= beverage.description %></p>
                      <% end %>
                    </div>
                    <% if beverage.price.present? %>
                      <span class="font-semibold text-forest-600 whitespace-nowrap">
                        <%= number_to_currency(beverage.price, unit: "€", format: "%n%u") %>
                      </span>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>

      </div>
    <% end %>

  </div>
</section>

<%# ========================================== %>
<%# AVERTISSEMENT %>
<%# ========================================== %>
<section class="py-8 bg-sage-50">
  <div class="container mx-auto px-4">
    <p class="text-center text-sm text-sage-700 italic">
      L'abus d'alcool est dangereux pour la santé, à consommer avec modération.
    </p>
  </div>
</section>

<%# ========================================== %>
<%# CTA RÉSERVATION %>
<%# ========================================== %>
<section class="py-16 bg-forest-800">
  <div class="container mx-auto px-4">
    <div class="max-w-2xl mx-auto text-center text-white" data-controller="scroll-animation">
      <h2 class="text-2xl md:text-3xl font-serif font-bold mb-4">
        Venez prendre un verre
      </h2>
      <p class="text-cream-200 mb-8">
        Bar ouvert tous les jours de 8h à 19h
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="tel:0961631527" class="inline-flex items-center justify-center gap-3 bg-white text-forest-800 font-semibold px-8 py-4 rounded-lg hover:bg-cream-100 transition-all duration-300 shadow-lg w-full sm:w-auto">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          09 61 63 15 27
        </a>
        <%= link_to carte_path, class: "text-cream-200 hover:text-white transition-colors underline underline-offset-4" do %>
          Voir la carte du restaurant
        <% end %>
      </div>
    </div>
  </div>
</section>
