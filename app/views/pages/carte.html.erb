<%# ========================================== %>
<%# HERO AVEC PHOTO %>
<%# ========================================== %>
<% hero_img = site_photo_for("carte_hero") %>
<section class="relative -mt-20 h-[50vh] min-h-[400px] max-h-[600px] flex items-center justify-center overflow-hidden">
  <!-- Image de fond -->
  <img src="<%= hero_img[:url] %>" alt="<%= hero_img[:alt] %>" class="absolute inset-0 w-full h-full object-cover">

  <!-- Overlay sombre -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/50 to-black/70"></div>

  <!-- Contenu -->
  <div class="relative z-10 container mx-auto px-4 pt-20 text-center text-white">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold mb-4 drop-shadow-lg">
      La carte
    </h1>
    <p class="text-xl md:text-2xl text-cream-100 drop-shadow font-light">
      Cuisine maison — Produits frais & de saison
    </p>
  </div>
</section>

<%# ========================================== %>
<%# LA CARTE %>
<%# ========================================== %>
<section class="section-padding bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-2xl mx-auto">

      <%# NOS ENTRÉES %>
      <div class="mb-20" data-controller="scroll-animation">
        <h2 class="text-3xl font-serif font-bold text-forest-800 mb-10 text-center">
          Nos entrées
        </h2>

        <div class="space-y-6">
          <div class="flex justify-between items-baseline border-b border-dotted border-sage-300 pb-2">
            <span class="font-medium text-forest-800 pr-4">Oeuf Mimosa</span>
            <span class="font-semibold text-forest-600">9 €</span>
          </div>

          <div class="flex justify-between items-baseline border-b border-dotted border-sage-300 pb-2">
            <span class="font-medium text-forest-800 pr-4">Camembert Rôti</span>
            <span class="font-semibold text-forest-600">13 €</span>
          </div>

          <div class="flex justify-between items-baseline border-b border-dotted border-sage-300 pb-2">
            <span class="font-medium text-forest-800 pr-4">Jambon Serrano</span>
            <span class="font-semibold text-forest-600">15 €</span>
          </div>
        </div>
      </div>

      <%# NOS PLATS %>
      <div class="mb-20" data-controller="scroll-animation">
        <h2 class="text-3xl font-serif font-bold text-forest-800 mb-10 text-center">
          Nos plats
        </h2>

        <div class="space-y-6">
          <div class="border-b border-dotted border-sage-300 pb-2">
            <div class="flex justify-between items-baseline">
              <span class="font-medium text-forest-800 pr-4">Pâtes du Jour</span>
              <span class="font-semibold text-forest-600">15 €</span>
            </div>
            <p class="text-sm text-sage-600 mt-1">Parmesan, oignon, pignons, piment d'Espelette, huile de Basilic maison</p>
          </div>

          <div class="flex justify-between items-baseline border-b border-dotted border-sage-300 pb-2">
            <span class="font-medium text-forest-800 pr-4">Plat du Jour</span>
            <span class="font-semibold text-forest-600">15 €</span>
          </div>

          <div class="flex justify-between items-baseline border-b border-dotted border-sage-300 pb-2">
            <span class="font-medium text-forest-800 pr-4">Salade César</span>
            <span class="font-semibold text-forest-600">19 €</span>
          </div>

          <div class="border-b border-dotted border-sage-300 pb-2">
            <div class="flex justify-between items-baseline">
              <span class="font-medium text-forest-800 pr-4">Tartare à l'Italienne</span>
              <span class="font-semibold text-forest-600">21 €</span>
            </div>
            <p class="text-sm text-sage-600 mt-1">Parmesan, oignon, pignons, piment d'Espelette, huile de Basilic maison</p>
          </div>

          <div class="flex justify-between items-baseline border-b border-dotted border-sage-300 pb-2">
            <span class="font-medium text-forest-800 pr-4">Fish and Chips</span>
            <span class="font-semibold text-forest-600">21 €</span>
          </div>

          <div class="border-b border-dotted border-sage-300 pb-2">
            <div class="flex justify-between items-baseline">
              <span class="font-medium text-forest-800 pr-4">Bô Bun au Poulet Croustillant</span>
              <span class="font-semibold text-forest-600">21 €</span>
            </div>
            <p class="text-sm text-sage-600 mt-1">Fines noodles, salade romaine, nems de porc sauce Bo bun, cacahuètes, oignons frits</p>
          </div>

          <div class="flex justify-between items-baseline border-b border-dotted border-sage-300 pb-2">
            <span class="font-medium text-forest-800 pr-4">Assiette du Golfeur</span>
            <span class="font-semibold text-forest-600">21 €</span>
          </div>

          <p class="text-center text-sage-600 italic pt-4">Suggestions à l'ardoise selon arrivages</p>
        </div>
      </div>

      <%# NOS DESSERTS %>
      <div class="mb-16" data-controller="scroll-animation">
        <h2 class="text-3xl font-serif font-bold text-forest-800 mb-10 text-center">
          Nos desserts
        </h2>

        <div class="space-y-6">
          <div class="flex justify-between items-baseline border-b border-dotted border-sage-300 pb-2">
            <span class="font-medium text-forest-800 pr-4">Gaufre Liégeoise au Caramel</span>
            <span class="font-semibold text-forest-600">8 €</span>
          </div>

          <div class="flex justify-between items-baseline border-b border-dotted border-sage-300 pb-2">
            <span class="font-medium text-forest-800 pr-4">Pavlova au Coulis de Fruits Rouges</span>
            <span class="font-semibold text-forest-600">9 €</span>
          </div>

          <div class="flex justify-between items-baseline border-b border-dotted border-sage-300 pb-2">
            <span class="font-medium text-forest-800 pr-4">Café Gourmand</span>
            <span class="font-semibold text-forest-600">10 €</span>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<%# ========================================== %>
<%# NOS FORMULES %>
<%# ========================================== %>
<section class="section-padding bg-forest-800">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-serif font-bold text-white mb-12 text-center" data-controller="scroll-animation">
        Nos formules
      </h2>

      <div class="grid md:grid-cols-3 gap-8" data-controller="scroll-animation" data-scroll-animation-animation-value="fade-in">

        <%# Menu du jour %>
        <div class="bg-white rounded-2xl p-8 text-center">
          <h3 class="text-xl font-serif font-bold text-forest-800 mb-4">Menu du jour</h3>
          <p class="text-forest-700 mb-2">Entrée/Plat ou Plat/Dessert</p>
          <p class="text-4xl font-bold text-forest-600 mb-4">22 €</p>
          <div class="border-t border-sage-200 pt-4 mt-4">
            <p class="text-forest-700">Entrée + Plat + Dessert</p>
            <p class="text-4xl font-bold text-forest-600 mt-1">24 €</p>
          </div>
          <p class="text-sm text-sage-600 italic mt-4">Nouveau menu chaque jour</p>
        </div>

        <%# Menu enfant %>
        <div class="bg-white rounded-2xl p-8 text-center">
          <h3 class="text-xl font-serif font-bold text-forest-800 mb-2">Le petit golfeur</h3>
          <p class="text-sage-600 text-sm mb-6">Menu enfant</p>
          <p class="text-3xl font-bold text-forest-700 mb-4">12,50 €</p>
          <p class="text-sm text-forest-600">Plat + Boisson + Dessert</p>
        </div>

        <%# Groupes %>
        <div class="bg-white rounded-2xl p-8 text-center flex flex-col">
          <h3 class="text-xl font-serif font-bold text-forest-800 mb-6">Groupes</h3>
          <p class="text-forest-700 mb-6 flex-1 flex items-center justify-center">Formules sur mesure pour vos événements</p>
          <a href="mailto:sasvmrestaurations@gmail.com" class="text-forest-600 font-semibold hover:text-forest-800 transition-colors underline underline-offset-4">
            Demander un devis
          </a>
        </div>

      </div>
    </div>
  </div>
</section>

