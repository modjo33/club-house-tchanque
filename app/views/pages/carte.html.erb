<% content_for(:title, "La Carte - Club House Tchanqué") %>

<!-- Hero -->
<section class="relative py-32 bg-gradient-to-br from-forest-800 to-forest-600">
  <div class="absolute inset-0 bg-black/20"></div>
  <div class="relative z-10 container mx-auto px-4 text-center text-white">
    <h1 class="text-5xl font-serif font-bold text-gold-400 mb-4">La Carte</h1>
    <p class="text-xl text-cream-100">Découvrez notre cuisine française traditionnelle</p>
  </div>
</section>

<!-- Menu Content -->
<section class="py-16 bg-cream-50">
  <div class="container mx-auto px-4 max-w-4xl">

    <!-- Entrées -->
    <div class="mb-16">
      <h2 class="text-3xl font-serif font-bold text-forest-800 mb-8 text-center border-b-2 border-gold-400 pb-4">Entrées</h2>
      <div class="space-y-6">
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-lg font-semibold text-forest-800">Salade du Club House</h3>
            <p class="text-forest-600 text-sm">Mesclun, tomates confites, magret fumé, noix et copeaux de parmesan</p>
          </div>
          <span class="text-gold-600 font-bold">14€</span>
        </div>
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-lg font-semibold text-forest-800">Velouté de saison</h3>
            <p class="text-forest-600 text-sm">Selon l'inspiration du chef, accompagné de croûtons maison</p>
          </div>
          <span class="text-gold-600 font-bold">9€</span>
        </div>
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-lg font-semibold text-forest-800">Foie gras maison</h3>
            <p class="text-forest-600 text-sm">Mi-cuit, chutney de figues et pain toasté</p>
          </div>
          <span class="text-gold-600 font-bold">18€</span>
        </div>
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-lg font-semibold text-forest-800">Huîtres du Bassin</h3>
            <p class="text-forest-600 text-sm">6 pièces - Huîtres spéciales du Bassin d'Arcachon</p>
          </div>
          <span class="text-gold-600 font-bold">15€</span>
        </div>
      </div>
    </div>

    <!-- Plats -->
    <div class="mb-16">
      <h2 class="text-3xl font-serif font-bold text-forest-800 mb-8 text-center border-b-2 border-gold-400 pb-4">Plats</h2>
      <div class="space-y-6">
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-lg font-semibold text-forest-800">Entrecôte grillée</h3>
            <p class="text-forest-600 text-sm">300g, sauce au poivre ou échalotes, frites maison</p>
          </div>
          <span class="text-gold-600 font-bold">26€</span>
        </div>
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-lg font-semibold text-forest-800">Magret de canard</h3>
            <p class="text-forest-600 text-sm">Sauce aux cèpes, pommes sarladaises</p>
          </div>
          <span class="text-gold-600 font-bold">24€</span>
        </div>
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-lg font-semibold text-forest-800">Pavé de saumon</h3>
            <p class="text-forest-600 text-sm">Sauce vierge, riz basmati et légumes de saison</p>
          </div>
          <span class="text-gold-600 font-bold">22€</span>
        </div>
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-lg font-semibold text-forest-800">Burger du Club House</h3>
            <p class="text-forest-600 text-sm">Boeuf charolais, bacon, cheddar, oignons confits, frites maison</p>
          </div>
          <span class="text-gold-600 font-bold">19€</span>
        </div>
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-lg font-semibold text-forest-800">Plat du jour</h3>
            <p class="text-forest-600 text-sm">Selon l'inspiration du chef - Demandez à votre serveur</p>
          </div>
          <span class="text-gold-600 font-bold">16€</span>
        </div>
      </div>
    </div>

    <!-- Desserts -->
    <div class="mb-16">
      <h2 class="text-3xl font-serif font-bold text-forest-800 mb-8 text-center border-b-2 border-gold-400 pb-4">Desserts</h2>
      <div class="space-y-6">
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-lg font-semibold text-forest-800">Fondant au chocolat</h3>
            <p class="text-forest-600 text-sm">Coeur coulant, glace vanille</p>
          </div>
          <span class="text-gold-600 font-bold">9€</span>
        </div>
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-lg font-semibold text-forest-800">Crème brûlée</h3>
            <p class="text-forest-600 text-sm">À la vanille de Madagascar</p>
          </div>
          <span class="text-gold-600 font-bold">8€</span>
        </div>
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-lg font-semibold text-forest-800">Café gourmand</h3>
            <p class="text-forest-600 text-sm">Café accompagné de 3 mignardises du chef</p>
          </div>
          <span class="text-gold-600 font-bold">10€</span>
        </div>
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-lg font-semibold text-forest-800">Canelés bordelais</h3>
            <p class="text-forest-600 text-sm">Duo de canelés maison, crème anglaise</p>
          </div>
          <span class="text-gold-600 font-bold">8€</span>
        </div>
      </div>
    </div>

    <!-- Formules -->
    <div class="bg-forest-800 text-white p-8 rounded-lg">
      <h2 class="text-3xl font-serif font-bold text-gold-400 mb-8 text-center">Nos Formules</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div class="text-center p-6 border border-gold-400 rounded-lg">
          <h3 class="text-xl font-bold text-gold-400 mb-2">Formule Déjeuner</h3>
          <p class="text-cream-200 mb-4">Plat + Dessert</p>
          <span class="text-3xl font-bold text-gold-400">22€</span>
        </div>
        <div class="text-center p-6 border border-gold-400 rounded-lg">
          <h3 class="text-xl font-bold text-gold-400 mb-2">Menu Complet</h3>
          <p class="text-cream-200 mb-4">Entrée + Plat + Dessert</p>
          <span class="text-3xl font-bold text-gold-400">32€</span>
        </div>
      </div>
    </div>

  </div>
</section>
