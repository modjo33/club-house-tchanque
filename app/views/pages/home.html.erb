<%# ========================================== %>
<%# SECTION 1 — HERO (plein écran) %>
<%# ========================================== %>
<% hero_img = site_photo_for("home_hero") %>
<section class="relative h-[80vh] md:h-screen min-h-[600px] -mt-20">
  <!-- Background image -->
  <div class="absolute inset-0">
    <img src="<%= hero_img[:url] %>" alt="<%= hero_img[:alt] %>" class="w-full h-full object-cover">
    <!-- Overlay sombre pour lisibilité du texte -->
    <div class="absolute inset-0 bg-gradient-to-b from-forest-900/70 via-forest-900/50 to-forest-900/70"></div>
  </div>

  <!-- Contenu Hero -->
  <div class="relative z-10 h-full flex items-center justify-center pt-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center text-white" data-controller="scroll-animation" data-scroll-animation-threshold-value="0">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold mb-6 text-shadow-lg leading-tight">
          Restaurant Club House Tchanqué
        </h1>
        <p class="text-xl md:text-2xl text-cream-100 mb-10 text-shadow font-light">
          Vue panoramique sur le golf — Ouvert à tous
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href="tel:0961631527" class="btn-primary w-full sm:w-auto">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Réserver
          </a>
          <%= link_to carte_path, class: "btn-secondary w-full sm:w-auto" do %>
            Voir la carte
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 text-white/60 animate-bounce">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
    </svg>
  </div>
</section>

<%# ========================================== %>
<%# SECTION 2 — Le lieu %>
<%# ========================================== %>
<section class="section-padding bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-2 gap-12 lg:gap-20 items-center">
        <!-- Photo (gauche sur desktop, bas sur mobile) -->
        <% lieu_img = site_photo_for("home_lieu") %>
        <div class="order-2 md:order-1" data-controller="scroll-animation" data-scroll-animation-animation-value="fade-in-left">
          <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-2xl">
            <img src="<%= lieu_img[:url] %>" alt="<%= lieu_img[:alt] %>" class="w-full h-full object-cover" loading="lazy">
          </div>
        </div>

        <!-- Texte (droite sur desktop, haut sur mobile) -->
        <div class="order-1 md:order-2" data-controller="scroll-animation" data-scroll-animation-animation-value="fade-in-right">
          <p class="text-sage-600 font-medium tracking-wide uppercase text-sm mb-3">Un cadre unique</p>
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-forest-800 mb-6 leading-tight">
            Au coeur du golf de Villenave d'Ornon
          </h2>
          <div class="space-y-4 text-forest-700 text-lg leading-relaxed">
            <p>
              Situé sur l'historique Domaine de Geneste, notre restaurant vous accueille dans un cadre naturel unique. Grande terrasse avec vue panoramique sur le lac et le green, salle lumineuse et salle privative.
            </p>
            <p class="font-medium text-forest-800">
              Nul besoin d'être golfeur, le Club House Tchanqué est ouvert à tous !
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%# ========================================== %>
<%# SECTION 3 — La cuisine %>
<%# ========================================== %>
<section class="section-padding bg-cream-50">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-2 gap-12 lg:gap-20 items-center">
        <!-- Texte (gauche) -->
        <div data-controller="scroll-animation" data-scroll-animation-animation-value="fade-in-left">
          <p class="text-sage-600 font-medium tracking-wide uppercase text-sm mb-3">Cuisine maison</p>
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-forest-800 mb-6 leading-tight">
            Des produits frais & de saison
          </h2>
          <div class="space-y-4 text-forest-700 text-lg leading-relaxed mb-8">
            <p>
              Chaque plat est cuisiné à partir de produits frais sélectionnés avec soin. Découvrez les suggestions du Chef, le menu du jour, ou laissez-vous tenter par notre carte.
            </p>
          </div>
          <%= link_to carte_path, class: "btn-outline" do %>
            Découvrir la carte
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          <% end %>
        </div>

        <!-- Carrousel photos cuisine (droite) -->
        <% cuisine_images = site_photos_for("home_cuisine") %>
        <div data-controller="scroll-animation" data-scroll-animation-animation-value="fade-in-right">
          <% if cuisine_images.size > 1 %>
            <%= render "shared/carousel", images: cuisine_images, options: { height: "aspect-[4/3]", autoplay: true, show_arrows: true, show_indicators: true } %>
          <% else %>
            <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-2xl">
              <img src="<%= cuisine_images.first[:url] %>" alt="<%= cuisine_images.first[:alt] %>" class="w-full h-full object-cover" loading="lazy">
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<%# ========================================== %>
<%# SECTION 4 — Terrasse & ambiance %>
<%# ========================================== %>
<section class="section-padding bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Titre -->
      <div class="text-center mb-12" data-controller="scroll-animation">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-forest-800 mb-4">
          Une terrasse face au lac
        </h2>
        <p class="text-forest-700 text-lg max-w-2xl mx-auto">
          Profitez d'un déjeuner ou d'un verre face au lac et au green, dans une ambiance calme et chaleureuse. Service bar toute la journée, restauration de 12h à 15h.
        </p>
      </div>

      <!-- Galerie de 3 photos -->
      <% terrasse_images = site_photos_for("home_terrasse") %>
      <div class="grid md:grid-cols-3 gap-6" data-controller="scroll-animation" data-scroll-animation-animation-value="fade-in">
        <% terrasse_images.first(3).each do |img| %>
          <div class="aspect-[4/3] rounded-xl overflow-hidden shadow-lg">
            <img src="<%= img[:url] %>" alt="<%= img[:alt] %>" class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" loading="lazy">
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

