<%= form_with model: [:admin, @formula], class: "space-y-6" do |f| %>
  <% if @formula.errors.any? %>
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
      <ul>
        <% @formula.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid md:grid-cols-2 gap-6">
    <div>
      <%= f.label :name, "Nom", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-forest-500" %>
    </div>

    <div>
      <%= f.label :position, "Position", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :position, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-forest-500" %>
    </div>
  </div>

  <div>
    <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :description, rows: 3, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-forest-500" %>
  </div>

  <div>
    <%= f.label :price, "Prix (â‚¬)", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.number_field :price, step: 0.5, min: 0, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-forest-500" %>
  </div>

  <div class="flex gap-4">
    <%= f.submit "Enregistrer", class: "bg-forest-600 text-white px-6 py-2 rounded hover:bg-forest-700 transition-colors cursor-pointer" %>
    <%= link_to "Annuler", admin_formulas_path, class: "bg-gray-300 text-gray-700 px-6 py-2 rounded hover:bg-gray-400 transition-colors" %>
  </div>
<% end %>
