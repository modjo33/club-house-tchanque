<div class="flex items-center justify-between mb-6">
  <h1 class="text-3xl font-bold text-forest-800">Carte des Vins</h1>
  <%= link_to "Ajouter un vin", new_admin_wine_item_path, class: "bg-gold-500 text-white px-4 py-2 rounded hover:bg-gold-600 transition-colors" %>
</div>

<% WineItem::CATEGORIES.each do |category| %>
  <% items = @wine_items.select { |i| i.category == category } %>
  <% next if items.empty? %>

  <div class="mb-8">
    <h2 class="text-xl font-semibold text-forest-700 mb-4">
      <%= case category
          when "blanc" then "Vins blancs"
          when "rose" then "Vins rosés"
          when "rouge" then "Vins rouges"
          when "champagne" then "Champagne"
          end %>
    </h2>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="w-full">
        <thead class="bg-forest-800 text-white">
          <tr>
            <th class="px-4 py-3 text-left">Pos.</th>
            <th class="px-4 py-3 text-left">Nom</th>
            <th class="px-4 py-3 text-left">Appellation</th>
            <th class="px-4 py-3 text-right">Verre</th>
            <th class="px-4 py-3 text-right">Bouteille</th>
            <th class="px-4 py-3 text-right">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% items.each do |item| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 text-gray-500"><%= item.position %></td>
              <td class="px-4 py-3 font-medium"><%= item.name %></td>
              <td class="px-4 py-3 text-sm text-gray-600 italic"><%= item.appellation %></td>
              <td class="px-4 py-3 text-right"><%= item.formatted_glass_price %></td>
              <td class="px-4 py-3 text-right font-semibold text-gold-600"><%= item.formatted_bottle_price %></td>
              <td class="px-4 py-3 text-right">
                <%= link_to "Modifier", edit_admin_wine_item_path(item), class: "text-forest-600 hover:text-forest-800 mr-3" %>
                <%= link_to "Supprimer", admin_wine_item_path(item), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?" }, class: "text-red-600 hover:text-red-800" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>

<% if @wine_items.empty? %>
  <div class="bg-white rounded-lg shadow p-8 text-center text-gray-500">
    Aucun vin pour le moment.
  </div>
<% end %>
