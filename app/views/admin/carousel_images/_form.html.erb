<%= form_with model: [:admin, @carousel_image], class: "space-y-6" do |f| %>
  <% if @carousel_image.errors.any? %>
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
      <ul>
        <% @carousel_image.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :page, "Page", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.select :page, CarouselImage.page_options, {}, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-forest-500" %>
  </div>

  <div>
    <%= f.label :position, "Position", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.number_field :position, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-forest-500" %>
  </div>

  <div>
    <%= f.label :alt_text, "Texte alternatif", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :alt_text, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-forest-500" %>
  </div>

  <div>
    <%= f.label :image, "Image", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <% if @carousel_image.image.attached? %>
      <div class="mb-2">
        <%= image_tag @carousel_image.image.variant(resize_to_limit: [200, 120]), class: "rounded" %>
      </div>
    <% end %>
    <%= f.file_field :image, accept: "image/*", class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="flex gap-4">
    <%= f.submit "Enregistrer", class: "bg-forest-600 text-white px-6 py-2 rounded hover:bg-forest-700 transition-colors cursor-pointer" %>
    <%= link_to "Annuler", admin_carousel_images_path, class: "bg-gray-300 text-gray-700 px-6 py-2 rounded hover:bg-gray-400 transition-colors" %>
  </div>
<% end %>
