<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 mb-6">
  <h1 class="text-2xl sm:text-3xl font-bold text-forest-800">Carte du Restaurant</h1>
  <%= link_to "Ajouter un plat", new_admin_menu_item_path, class: "bg-gold-500 text-white px-4 py-2 rounded hover:bg-gold-600 transition-colors self-start sm:self-auto" %>
</div>

<% MenuItem::CATEGORIES.each do |category| %>
  <% items = @menu_items.select { |i| i.category == category } %>
  <% next if items.empty? %>

  <div class="mb-8">
    <h2 class="text-xl font-semibold text-forest-700 mb-4 capitalize">
      <%= category == "entrees" ? "Entrées" : category == "plats" ? "Plats" : "Desserts" %>
    </h2>

    <%# ===== MOBILE CARDS ===== %>
    <div class="md:hidden space-y-2">
      <% items.each do |item| %>
        <div class="bg-white rounded-lg shadow p-4">
          <div class="flex items-start justify-between gap-2">
            <div class="flex-1 min-w-0">
              <p class="font-medium text-forest-800"><%= item.name %></p>
              <p class="text-sm text-gray-500 mt-0.5"><%= truncate(item.description, length: 60) %></p>
            </div>
            <span class="font-semibold text-gold-600 shrink-0"><%= item.formatted_price %></span>
          </div>
          <div class="flex justify-end gap-3 mt-3 pt-2 border-t border-gray-100">
            <%= link_to "Modifier", edit_admin_menu_item_path(item), class: "text-sm text-forest-600 hover:text-forest-800 font-medium" %>
            <%= link_to "Supprimer", admin_menu_item_path(item), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?" }, class: "text-sm text-red-600 hover:text-red-800 font-medium" %>
          </div>
        </div>
      <% end %>
    </div>

    <%# ===== DESKTOP TABLE ===== %>
    <div class="hidden md:block bg-white rounded-lg shadow overflow-hidden">
      <table class="w-full">
        <thead class="bg-forest-800 text-white">
          <tr>
            <th class="px-4 py-3 text-left">Pos.</th>
            <th class="px-4 py-3 text-left">Nom</th>
            <th class="px-4 py-3 text-left">Description</th>
            <th class="px-4 py-3 text-right">Prix</th>
            <th class="px-4 py-3 text-right">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% items.each do |item| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 text-gray-500"><%= item.position %></td>
              <td class="px-4 py-3 font-medium"><%= item.name %></td>
              <td class="px-4 py-3 text-sm text-gray-600"><%= truncate(item.description, length: 50) %></td>
              <td class="px-4 py-3 text-right font-semibold text-gold-600"><%= item.formatted_price %></td>
              <td class="px-4 py-3 text-right">
                <%= link_to "Modifier", edit_admin_menu_item_path(item), class: "text-forest-600 hover:text-forest-800 mr-3" %>
                <%= link_to "Supprimer", admin_menu_item_path(item), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?" }, class: "text-red-600 hover:text-red-800" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>

<% if @menu_items.empty? %>
  <div class="bg-white rounded-lg shadow p-8 text-center text-gray-500">
    Aucun plat pour le moment.
  </div>
<% end %>
