<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 mb-6">
  <h1 class="text-2xl sm:text-3xl font-bold text-forest-800">Photos Cuisine</h1>
  <%= link_to "Ajouter une image", new_admin_cuisine_image_path, class: "bg-gold-500 text-white px-4 py-2 rounded hover:bg-gold-600 transition-colors self-start sm:self-auto" %>
</div>

<div class="mb-6 p-4 bg-blue-50 rounded-lg">
  <p class="text-sm text-blue-700">
    <strong>Carrousel "Cuisine maison" :</strong> Ces images sont affichées dans le carrousel de la section "Des produits frais & de saison" sur la page d'accueil. Seules les images actives sont affichées, triées par position.
  </p>
</div>

<%# ===== MOBILE CARDS ===== %>
<div class="md:hidden space-y-3">
  <% @cuisine_images.each do |image| %>
    <div class="bg-white rounded-lg shadow p-3 flex items-center gap-3">
      <% if image.image.attached? %>
        <%= image_tag image.image.variant(resize_to_limit: [100, 60]), class: "h-12 w-auto rounded shrink-0" %>
      <% else %>
        <div class="h-12 w-16 bg-gray-100 rounded flex items-center justify-center shrink-0">
          <span class="text-gray-400 text-xs">N/A</span>
        </div>
      <% end %>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-forest-800 truncate"><%= image.title.presence || "Sans titre" %></p>
        <div class="flex items-center gap-2 mt-1">
          <span class="text-xs text-gray-500">Pos: <%= image.position %></span>
          <% if image.active? %>
            <span class="text-xs bg-green-100 text-green-700 px-1.5 py-0.5 rounded">Actif</span>
          <% else %>
            <span class="text-xs bg-gray-100 text-gray-500 px-1.5 py-0.5 rounded">Inactif</span>
          <% end %>
        </div>
      </div>
      <div class="flex gap-2 shrink-0">
        <%= link_to "Modifier", edit_admin_cuisine_image_path(image), class: "text-xs text-forest-600 hover:text-forest-800 font-medium" %>
        <%= link_to "Suppr.", admin_cuisine_image_path(image), data: { turbo_method: :delete, turbo_confirm: "Supprimer cette image ?" }, class: "text-xs text-red-600 hover:text-red-800 font-medium" %>
      </div>
    </div>
  <% end %>
  <% if @cuisine_images.empty? %>
    <div class="bg-white rounded-lg shadow p-8 text-center text-gray-500">Aucune image pour le moment.</div>
  <% end %>
</div>

<%# ===== DESKTOP TABLE ===== %>
<div class="hidden md:block bg-white rounded-lg shadow overflow-hidden">
  <table class="w-full">
    <thead class="bg-forest-800 text-white">
      <tr>
        <th class="px-4 py-3 text-left">Image</th>
        <th class="px-4 py-3 text-left">Titre</th>
        <th class="px-4 py-3 text-center">Position</th>
        <th class="px-4 py-3 text-center">Statut</th>
        <th class="px-4 py-3 text-right">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @cuisine_images.each do |image| %>
        <tr class="hover:bg-gray-50">
          <td class="px-4 py-3">
            <% if image.image.attached? %>
              <%= image_tag image.image.variant(resize_to_limit: [120, 80]), class: "rounded" %>
            <% else %>
              <span class="text-gray-400">Pas d'image</span>
            <% end %>
          </td>
          <td class="px-4 py-3 text-sm text-forest-800"><%= image.title.presence || "—" %></td>
          <td class="px-4 py-3 text-center"><%= image.position %></td>
          <td class="px-4 py-3 text-center">
            <% if image.active? %>
              <span class="bg-green-100 text-green-700 px-2 py-1 rounded text-xs font-medium">Actif</span>
            <% else %>
              <span class="bg-gray-100 text-gray-500 px-2 py-1 rounded text-xs font-medium">Inactif</span>
            <% end %>
          </td>
          <td class="px-4 py-3 text-right">
            <%= link_to "Modifier", edit_admin_cuisine_image_path(image), class: "text-forest-600 hover:text-forest-800 mr-3" %>
            <%= link_to "Supprimer", admin_cuisine_image_path(image), data: { turbo_method: :delete, turbo_confirm: "Supprimer cette image ?" }, class: "text-red-600 hover:text-red-800" %>
          </td>
        </tr>
      <% end %>
      <% if @cuisine_images.empty? %>
        <tr>
          <td colspan="5" class="px-4 py-8 text-center text-gray-500">Aucune image pour le moment.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
