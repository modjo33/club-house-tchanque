<%= form_with model: [:admin, @event], class: "space-y-6" do |f| %>
  <% if @event.errors.any? %>
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, "Titre de l'événement", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :title, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-forest-500", placeholder: "Ex: Soirée Saint-Valentin" %>
  </div>

  <div>
    <%= f.label :description, "Description (optionnel)", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :description, rows: 3, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-forest-500", placeholder: "Description courte de l'événement..." %>
  </div>

  <div class="grid md:grid-cols-2 gap-6">
    <div>
      <%= f.label :start_date, "Date de début", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :start_date, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-forest-500" %>
    </div>

    <div>
      <%= f.label :end_date, "Date de fin (optionnel)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :end_date, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-forest-500" %>
      <p class="text-xs text-gray-500 mt-1">Laissez vide si l'événement ne dure qu'un jour</p>
    </div>
  </div>

  <div>
    <%= f.label :affiche, "Affiche de l'événement", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <% if @event.affiche.attached? %>
      <div class="mb-3 flex items-center gap-4">
        <%= image_tag @event.affiche, class: "h-32 w-auto rounded shadow" %>
        <span class="text-sm text-gray-500">Image actuelle</span>
      </div>
    <% end %>
    <%= f.file_field :affiche, accept: "image/*", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-forest-500" %>
    <p class="text-xs text-gray-500 mt-1">Format recommandé : JPG ou PNG, format affiche (portrait ou paysage)</p>
  </div>

  <div class="flex items-center gap-3">
    <%= f.check_box :active, class: "w-4 h-4 text-forest-600 border-gray-300 rounded focus:ring-forest-500" %>
    <%= f.label :active, "Événement actif (visible sur le site)", class: "text-sm font-medium text-gray-700" %>
  </div>

  <div class="flex gap-4">
    <%= f.submit "Enregistrer", class: "bg-forest-600 text-white px-6 py-2 rounded hover:bg-forest-700 transition-colors cursor-pointer" %>
    <%= link_to "Annuler", admin_events_path, class: "bg-gray-300 text-gray-700 px-6 py-2 rounded hover:bg-gray-400 transition-colors" %>
  </div>
<% end %>
